{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noEmit": true,
        "lib": ["ES2019", "DOM"],
        "downlevelIteration": true
    },
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}